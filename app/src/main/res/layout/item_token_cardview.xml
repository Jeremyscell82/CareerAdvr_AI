<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_token_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cardviewButtonStyle"
        app:cardElevation="@dimen/default_button_elevation"
        app:cardCornerRadius="36dp"
        android:layout_margin="@dimen/default_side_margins"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/default_padding"
            >
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_token"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/default_padding"
                app:tint="@color/primary_text_color"
                />
            <TextView
                android:id="@+id/home_token_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/fontMedium_reg"
                android:text="00"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>