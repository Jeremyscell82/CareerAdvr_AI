<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_history_filter_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        style="@style/cardviewButtonStyle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="@dimen/default_padding"
            android:paddingEnd="@dimen/default_padding"
            >
            <ImageView
                android:id="@+id/item_history_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="@dimen/default_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:src="@drawable/ic_poem"
                app:tint="@color/primary_text_color"
                />
            <TextView
                android:id="@+id/item_history_title"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                style="@style/fontSmall_reg"
                tools:text="Poems are really coold"
                android:gravity="center"
                />

            <ImageView
                android:id="@+id/item_history_selected_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="@dimen/default_padding"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_check"
                app:tint="@color/bottombar_active"
                android:visibility="gone"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>